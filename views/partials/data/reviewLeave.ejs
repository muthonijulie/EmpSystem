<div class="container">
  <div class="form">
    <% if (sampleData.length> 0){ %>
      <% sampleData.forEach((data)=>{ %>
        <h3>Application Details</h3>
        <form class="" action="/hr/reviewleaveapplications/<%= data.leaveid %>" method="post">
          <div class="mb-3">
            <label for="leaveid" class="form-label">LEAVE ID:</label>
            <input type="text" name="leaveid" class="form-control" id="leaveid" disabled
              placeholder="<%= data.leaveid %>" />
          </div>
          <div class="mb-3">
            <label for="employeeId" class="form-label">EMPLOYEE ID:</label>
            <input type="text" name="employeeId" class="form-control" id="employeeId" disabled
              placeholder="<%= data.emp_id %>" />
          </div>

          <div class="row">
            <div class="col">
              <label for="applicationDate" class="form-label">APPLICATION DATE:</label>
              <input type="number" name="applicationDate" class="form-control" id="applicationDate" disabled
                placeholder="<%= data.applicationDate %>" />
            </div>
          </div>
          <div class="mb-3">
            <label for="leaveStart" class="form-label">START DATE:</label>
            <input type="text" name="leaveStart" class="form-control" id="leaveStart" disabled
              placeholder="<%= data.leaveStart %>">

            <label for="leaveEnd" class="form-label">END DATE:</label>
            <input type="text" name="leaveEnd" class="form-control" id="leaveEnd" disabled
              placeholder="<%= data.leaveEnd %>" />

            <label for="leaveType" class="form-label">LEAVE DESCRIPTION:</label>
            <input type="text" name="leaveType" class="form-control" id="leaveType" disabled
                placeholder="<%= data.leaveType %>" />
          </div><br>
          <% }) %>
          <% } else { %>
            <textarea type="text" name="data" class="form-control" id="data"
            disabled placeholder="Data not found"></textarea>
        <% } %>
      <label for="Status" class="form-label">Review Application:</label>
      <select id="status" name="Status" size="1" class="form-select mb-3">
        <option value="Pending" selected disabled>(select one)</option>
        <option value="Accepted">Accept</option>
        <option value="Rejected">Reject</option>
      </select>
      <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
  </div>
</div>